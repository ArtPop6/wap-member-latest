  .title
    width 170px
    height 50px
    font-size 36px
    margin-top 200px
    margin-left 75px
    font-weight 450
    font-family PingFangSC-Regular,PingFang SC
    color rgba(0,0,0,1)
    line-height 50px
    white-space nowrap

  .content
    width 100%
    padding 40px 75px

    .van-cell-group
      .van-cell
        padding 0
        width 100%
        height 98px
        padding 20px 0
        font-size 30px
        line-height 58px
        text-align center
        margin-top 21px

        .van-cell__title
          margin-right 22px
          border-right 1px solid #ebebeb

        .van-cell__value
          .van-field__body
            .van-field__button
              height 100%
              .van-button
                height 56px
                padding 11px 18px
                // font-size 24px
                width 160px
                height 56px

  .van-button__wrap
    width 100%
    margin-top 80px
    padding 0 75px

    .van-button--default
      width 100%
      height 88px
      background-color $primary-color
      font-size 36px

