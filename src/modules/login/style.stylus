body
  background-color #fff !important

.new-login
  position absolute
  width 100%
  height 100%
  overflow-x hidden

  .logo:after
    content ''
    position absolute
    left -10%
    width 120%
    z-index -1
    top 100px
    height 360px
    border-radius 0 0 50% 50%
    background-color $primary-color

  .logo
    position relative
    width 100%
    height 360px
    text-align center
    background $primary-color
    display flex
    flex-direction column
    align-items center
    justify-content flex-end
    padding-bottom 26px
    // background url(./img/logo.png) no-repeat $primary-color center bottom
    // background-size 50% 70%

    .logo-img
      width 350px
      height 250px
      animation a-c-paper 4s cubic-bezier(0.42, 1.14, 1, 1) both
      -webkit-animation a-c-paper 4s cubic-bezier(0.42, 1.14, 1, 1) both

      @keyframes a-c-paper
        0%
          opacity 0
          transform translate(0px, 142px) scale(0.8, 1.1)

        6%
          transform translate(0px, -10px) scale(1.3, 0.8)

        12%
          transform translate(0px, 5px) scale(0.92, 1.05)

        18%
          transform translate(0px, -2px) scale(1.1, 0.98)

        24%
          opacity 1
          transform translate(0px, 0px) scale(1, 1)

        100%
          opacity 1
          transform translate(0px, 0px) scale(1, 1)

