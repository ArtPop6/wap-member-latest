.van-dialog
  width 500px
  .van-dialog__content
    padding 65px 20px 50px 40px
    font-size 32px
    line-height 1.5

    .message
      width 260px

      .protocol-page
        color #1890ff
        // text-decoration underline

  .van-hairline--top
    height 78px
    border-top 1px solid #FAFAFC

    .van-button
      padding-top 10px
      font-size 30px
      height 100%

.card-wrap
  background #FAFAFC
  height 100%
  display flex
  flex-direction column

  .order
    width 100%
    flex 1
    overflow auto
    padding 20px
    // background url('../../assets/confirm_order/heartBeat.png') no-repeat
    // background-size 90% 60%
    // background-position bottom right

    .personal-info
      position relative
      display flex
      height 148px
      background rgba(255, 255, 255, 1)
      border-radius 2px
      padding 30px
      background rgba(255, 248, 198, 1) rgba(255, 255, 255, 1)
      box-shadow 0px 2px 8px 0px rgba(0, 0, 0, 0.1)

      .van-skeleton
        width 100%
        padding 0
        .van-skeleton__avatar
          width 88px
          height 88px
          margin-right 30px

        .van-skeleton__content
          padding 0

          .van-skeleton__title
            height 35px

          .van-skeleton__row
            height 33px

      .avatar
        width 88px
        height 88px
        border-radius 2px
        border 2px solid #ebebeb
        

      .right-part
        margin-left 30px
        height 100%
        display flex
        flex-direction column
        justify-content space-between
        align-items flex-end

        .nick-name
          width 100%
          height 45px
          line-height 45px
          margin-bottom 3px
          font-size 32px
          font-weight bold
          font-family PingFangSC-Medium, PingFang SC
          color rgba(0, 0, 0, 1)

        .tele
          font-size 32px
          font-size 28px
          width 100%
          color #777A88
          border-radius 8px

    .pay-info
      width 100%
      height 307px
      border-radius 0 0 8px 8px
      margin-top 20px
      background #fff
      box-shadow 0px 2px 8px 0px rgba(0, 0, 0, 0.1)

      .order-number
        position relative
        width 100%
        height 76px
        margin-top 16px
        padding 18px 30px 18px 22px
        // box-shadow 0 1px 0 0 rgba(229, 229,229, 1)
        border-bottom 1px solid #E5E5E5
        font-size 28px
        display flex

        .order-number-title
          color #777A88
          font-family PingFangSC-Medium, PingFang SC
          margin-right 66px
          width 130px
          white-space nowrap

        .stores::-webkit-scrollbar
          display none

        .stores:before
          content ''
          position absolute
          width 15%
          height 40px
          background linear-gradient(to right, rgba(255,255,255,0),rgba(255,255,255,1))
          top 20px
          right 0
          bottom 0

        .stores
          display flex
          flex 1
          overflow auto

          .store-tag
            color #fff
            padding 0 16px
            border 2px solid $primary-color
            background-color $primary-color
            background-image linear-gradient(
              45deg,
              rgba(255, 255, 255, 0.3) 25%,
              transparent 25%,
              transparent 50%,
              rgba(255, 255, 255, 0.3) 50%,
              rgba(255, 255, 255, 0.3) 75%,
              transparent 75%,
              transparent
            )
            border-radius 20px
            margin-right 12px
            // line-height 40px
            white-space nowrap
            position relative
          
          // .store-tag:before
          //   position absolute
          //   content ''
          //   right 0
          //   top 0
          //   border-right 20px solid #000
          //   border-top 20px solid transparent
          //   border-bottom 20px solid transparent
          //   border-left 20px solid transparent
          //   width 0
          //   height 0
            // transform rotateY(180deg)
            // // transform-origin left top

            .tag
              line-height 38px
              height 100%
              font-weight 660

      .card
        width 100%
        height 225px
        padding 20px 30px 20px 20px
        display flex

        .card-pic
          width 351px
          // height 172px
          height 100%
          position relative

          .card-pic__url
            width 100%
            height 100%

          .card-pic-type
            position absolute
            width 100%
            height 45px
            left 20px
            top 91px
            font-size 32px
            font-weight 500
            color #F5EDBC
            z-index 10

          .card-pic-desc
            position absolute
            height 30px
            width 100%
            left 20px
            top 136px
            font-size 22px
            font-weight 400
            color #C0C0C0
            z-index 10

        .card-desc
          width 395px
          height 100%
          margin-left 30px
          display flex
          flex-direction column
          justify-content space-around

          .card-name
            width 100%
            height 45px
            display flex
            justify-content space-between
            align-items center
            margin-bottom 5px

            .type-name
              font-size 32px
              font-weight bold
              white-space nowrap
              // width 78%
              overflow hidden

            .type-time
              font-size 22px
              font-weight 400
              color #fff
              text-align center
              padding 2px 5px
              font-size 22px
              border-radius 5px

            .yellow
              background #fcdb00

            .orange
              background #FFA97D

            .blue
              background #87B2FF

            .pink
              background #FF89A9

          .card-site
            font-size 28px
            color #777A88
            width 100%
            height 40px
            line-height 40px
            white-space nowrap
            overflow hidden

          .card-type
            font-size 28px

          .sum
            display flex
            width 100%
            justify-content space-between
            align-items center
            margin-top 36px

            .purchase-num
              font-size 25px
              color #777A88

            .select
              .van-stepper__minus, .van-stepper__plus
                background-color #fff
                border 1px solid rgba(216, 216, 216, 1)
                width 50px
                height 50px

              .van-stepper__plus::after
                height 18px
                width 2px
                
              .van-stepper__plus::before, .van-stepper__minus::before
                width 18px
                height 2px
              
              .van-stepper__input
                font-size 24px
                border-top 1px solid rgba(216, 216, 216, 1)
                border-bottom 1px solid rgba(216, 216, 216, 1)
                background-color #fff
                width 85px
                height 50px
                margin 0

    .protocol
      width 100%
      height 76px
      margin-top 16px
      font 24px

      .checkbox
        height 100%
        width 50%
        margin-left 10px

        .van-checkbox__icon--checked .van-icon
          background-color $primary-color
          border-color $primary-color

        .van-checkbox__label
          font-size 25px
          margin-left 16px
          height 100%
          line-height 76px

          .protocol-url
            color #1890ff
            font-size 26px
            // text-decoration underline

  .price
    background #fff
    width 100%
    height 98px
    bottom 0
    padding 0 40px 0 30px
    display flex
    justify-content space-between
    align-items center
    border-top 1px solid #ebebeb
    animation imageAnimation 0.35s linear

    @keyframes imageAnimation
      0%
        opacity 0
        transform translateY(148px)

      100%
        opacity 1
        transform translateY(0)

    .sum-price
      padding-top 10px

      .price-desc
        font-size 28px
        margin-right 56px

        .price-title
          font-size 28px
          color #E61111

    .van-button--normal
      font-size 24px
      height 60px
      width 256px
      white-space nowrap
      padding 13px 80px
      line-height 33px
      border-radius 8px
      background $primary-color
      border 1px solid $primary-color
      color #000
      box-shadow 2px 2px 10px rgb(212, 212, 212)